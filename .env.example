# Environment variables for SyncLedger
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# =============================================================================
# DATABASE (for Docker Compose)
# =============================================================================
POSTGRES_DB=syncledger
POSTGRES_USER=syncledger
POSTGRES_PASSWORD=syncledger123

# =============================================================================
# SPRING BOOT
# =============================================================================
SPRING_PROFILES_ACTIVE=docker

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=syncledger-secret-key-change-in-production-min-256-bits

# =============================================================================
# AWS CONFIGURATION (Optional - for S3 and SQS)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=syncledger-invoices
SQS_QUEUE_URL=

# =============================================================================
# AZURE / MICROSOFT GRAPH (for email integration)
# =============================================================================
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
INVOICE_MAILBOX=invoices@yourcompany.com

# =============================================================================
# SAGE API (for accounting integration)
# =============================================================================
SAGE_API_URL=https://api.sage.com
SAGE_CLIENT_ID=
SAGE_CLIENT_SECRET=

# =============================================================================
# PDF MICROSERVICE
# =============================================================================
PDF_SERVICE_URL=http://localhost:8000
